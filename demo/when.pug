extends default

block content
    b(data-bind="text: num")
    div
        button(data-bind="click: dec") -
        button(data-bind="click: inc") +

    script(type="module").
        import {ko} from '../lib/libs.js';
        import '../lib/koWhen.js';

        function VM() {
            this.num = ko.observable(0);

            this.num.when(1, () => alert('num is 1 (for the first time)'));

            this.inc = () => this.num(this.num() + 1);
            this.dec = () => this.num(this.num() - 1);
        }

        ko.applyBindings(new VM());